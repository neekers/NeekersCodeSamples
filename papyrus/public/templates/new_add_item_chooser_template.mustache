<div class="add-items-chooser">
  <div class="container search">
    <div class='search-bar'>
      <input type="text" name="search" placeholder='Start typing to search our favorite sites'/>
    </div>
    <div class='results'></div>
  </div>
  
  <div class="container my-stuff"></div>
  <div class='container upload'>
   <div class="upload-capable">
    <input type="file" class="upload_file" id="asset-upload" accept="image/jpg,image/jpeg,image/gif,image/png">
    <div class="fileupload"></div>
    <textarea name="description" class="description" placeholder="Item Description"></textarea>
    <div class="preview">
      {{! insert the img }}
      <img src="/images/default_new_collection.png" class="img-placeholder" alt="placeholder" />
    </div>
    <a class="upload_button button_style_1">Upload</a>
    <div class="progress"><div class="bar"></div></div>
    <span class="message"></span>
   </div>
   <div class="upload-incapable">
     <h1>Sorry, upload is not currently supported in your browser</h1>
   </div>

  </div>

  <div class='container text'>
    <input type="text" class="title" name="title" placeholder="Headline" />
    <textarea name="text" class="text" placeholder="Enter your text here"></textarea>
    <a class="done_button" href="#">Done</a>
  </div>

  <div class='container feed'>
    <label for="feed_url">Paste in the RSS Link</label>
    <input type="url" class="feed_url" id="feed_url" placeholder="Enter RSS Link"/>
    <label for="title">Title</label>
    <input type="text" class="title" id="title" placeholder="Enter RSS Title"/>
    <a class="done_button" href="#">Done</a>
  </div>

  <footer>
    <a class="cancel_btn" href="javascript:void(0)">Cancel</a>
  </footer>
</div>

<div class="fs_overlay"></div>
