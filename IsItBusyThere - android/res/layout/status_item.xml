<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="8dp"
    android:paddingTop="3dp" >

    <TextView
        android:id="@+id/lblPlaceName"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical|left"
        android:text="@string/LoadingPlace"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:maxWidth="275dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imgPlaceIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:paddingRight="5dp"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp"
        android:layout_toLeftOf="@+id/lblPlaceName" />

    <ImageView
        android:id="@+id/imgUserPhoto"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_below="@+id/lblPlaceName"
        android:layout_marginRight="5dp"
        android:src="@drawable/group" />

    <LinearLayout
        android:id="@+id/layoutUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblPlaceName"
        android:layout_toRightOf="@+id/imgUserPhoto"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/lblUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/dot_notbusy"
            android:drawablePadding="3dp"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/lblTimeAgo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </LinearLayout>

    <TextView
        android:id="@+id/lblStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutUserName"
        android:layout_toRightOf="@+id/imgUserPhoto"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>